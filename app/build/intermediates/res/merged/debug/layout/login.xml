<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.chatt.Login" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_20dp"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_20dp" >


        <ImageView
            android:id="@+id/logo"
            android:layout_width="282dp"
            android:layout_height="163dp"
            android:src="@drawable/circ"
            android:layout_gravity="center"
            android:layout_weight="0.36" />

        <ImageView
            android:id="@+id/logocenter"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tranround"
            android:layout_gravity="center"
            android:layout_weight="0.36"

            />

        <ImageView
            android:id="@+id/logotext"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logotext"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.36"/>


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_5dp"

            android:textSize="@dimen/txt_14sp" />

        <EditText
            android:id="@+id/editText1"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_username"
            android:hint="@string/email" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText2"
            style="@style/editext_graybg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:drawableLeft="@drawable/ic_pwd"
            android:hint="@string/password"
            android:inputType="textPassword" >
        </EditText>

        <!--<Button-->
            <!--android:id="@+id/btnReg"-->
            <!--style="@style/btn_white_large"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/register" />-->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_20dp"
            android:background="@color/white"
            android:padding="@dimen/pad_5dp"
            android:text="@string/log_in"
            android:textColor="@color/main_color_green"
            android:textSize="@dimen/txt_18sp"
            android:textStyle="bold" />

        <!--<Button-->
            <!--android:id="@+id/btnForgot"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/white"-->
            <!--android:padding="@dimen/pad_5dp"-->
            <!--android:text="@string/forgot_my_pwd"-->
            <!--android:textColor="@color/main_color_gray_dk"-->
            <!--android:textSize="@dimen/txt_14sp" />-->

    </LinearLayout>


</ScrollView>

